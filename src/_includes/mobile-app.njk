---
layout: base.njk
showHireButton: false
---

{% block breadcrumb %}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb terminal-breadcrumb">
        <li class="breadcrumb-item"><a href="{{ '/' | url }}">~</a></li>
        <li class="breadcrumb-item"><a href="{{ '/' | url }}">projects</a></li>
        <li class="breadcrumb-item active" aria-current="page">{{ projectSlug }}</li>
    </ol>
</nav>
{% endblock %}

{% block content %}
<h2 class="fs-3 fw-bold text-primary terminal-cursor">$ ls {{ projectName }}/</h2>
<p class="mb-4">{{ projectSummary }}</p>

<div class="row gx-2 gy-2 gx-md-3 gy-md-3 mb-5" data-bss-baguettebox="">
    <div class="col-md-6">
        <a href="{{ '/' | url }}assets/img/projects/{{ mainImage }}">
            <img class="img-fluid border rounded shadow-sm w-100" alt="{{ projectName }} Main Screenshot"
                src="{{ '/' | url }}assets/img/projects/{{ mainImage }}">
        </a>
    </div>
    <div class="col-md-6">
        <div class="row gx-2 gy-2 row-cols-2">
            {% for image in galleryImages %}
            <div class="col">
                <a href="{{ '/' | url }}assets/img/projects/{{ image.file }}">
                    <img class="img-fluid border rounded shadow-sm w-100" alt="{{ image.alt }}"
                        src="{{ '/' | url }}assets/img/projects/{{ image.file }}">
                </a>
            </div>
            {% endfor %}
        </div>
    </div>
</div>

<div class="project-details mb-5">
    <h3 class="fs-5 fw-bold">App Overview</h3>
    <p>{{ projectOverview }}</p>

    <h3 class="fs-5 fw-bold">Technologies Used</h3>
    <div class="tech-stack mb-4">
        {% for tech in technologies %}
        <span class="badge bg-dark me-2 mb-2">{{ tech }}</span>
        {% endfor %}
    </div>

    <h3 class="fs-5 fw-bold">Key Features</h3>
    <ul class="terminal-list">
        {% for feature in features %}
        <li>{{ feature }}</li>
        {% endfor %}
    </ul>

    <h3 class="fs-5 fw-bold">App Store Availability</h3>
    <div class="d-flex flex-wrap mb-4">
        {% if appStoreUrl %}
        <a href="{{ appStoreUrl }}" target="_blank" rel="noopener" class="btn btn-outline-primary me-3 mb-3">
            <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16"
                class="bi bi-apple me-2">
