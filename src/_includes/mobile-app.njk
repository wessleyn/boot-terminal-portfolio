                    d="M11.182.008C11.148-.03 9.923.023 8.857 1.18c-1.066 1.156-.902 2.482-.878 2.516.024.034 1.52.087 2.475-1.258.955-1.345.762-2.391.728-2.43Zm3.314 11.733c-.048-.096-2.325-1.234-2.113-3.422.212-2.189 1.675-2.789 1.698-2.854.023-.065-.597-.79-1.254-1.157a3.692 3.692 0 0 0-1.563-.434c-.108-.003-.483-.095-1.254.116-.508.139-1.653.589-1.968.607-.316.018-1.256-.522-2.267-.665-.647-.125-1.333.131-1.824.328-.49.196-1.422.754-2.074 2.237-.652 1.482-.311 3.83-.067 4.56.244.729.625 1.924 1.273 2.796.576.984 1.34 1.667 1.659 1.899.319.232 1.219.386 1.843.067.502-.308 1.408-.485 1.766-.472.357.013 1.061.154 1.782.539.571.197 1.111.115 1.652-.105.541-.221 1.324-1.059 2.238-2.758.347-.79.505-1.217.473-1.282Z" />
                <path
                    d="M11.182.008C11.148-.03 9.923.023 8.857 1.18c-1.066 1.156-.902 2.482-.878 2.516.024.034 1.52.087 2.475-1.258.955-1.345.762-2.391.728-2.43Zm3.314 11.733c-.048-.096-2.325-1.234-2.113-3.422.212-2.189 1.675-2.789 1.698-2.854.023-.065-.597-.79-1.254-1.157a3.692 3.692 0 0 0-1.563-.434c-.108-.003-.483-.095-1.254.116-.508.139-1.653.589-1.968.607-.316.018-1.256-.522-2.267-.665-.647-.125-1.333.131-1.824.328-.49.196-1.422.754-2.074 2.237-.652 1.482-.311 3.83-.067 4.56.244.729.625 1.924 1.273 2.796.576.984 1.34 1.667 1.659 1.899.319.232 1.219.386 1.843.067.502-.308 1.408-.485 1.766-.472.357.013 1.061.154 1.782.539.571.197 1.111.115 1.652-.105.541-.221 1.324-1.059 2.238-2.758.347-.79.505-1.217.473-1.282Z" />
            </svg>
            App Store
        </a>
        {% endif %}
        {% if playStoreUrl %}
        <a href="{{ playStoreUrl }}" target="_blank" rel="noopener" class="btn btn-outline-primary me-3 mb-3">
            <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16"
                class="bi bi-google-play me-2">
                <path
                    d="M14.222 9.374c1.037-.61 1.037-2.137 0-2.748L11.528 5.04 8.32 8l3.207 2.96 2.694-1.586Zm-3.595 2.116L7.583 8.68 1.03 14.73c.201.202.44.354.702.446.264.093.544.14.833.14.41 0 .8-.108 1.15-.327l6.912-4.098zM1.03 1.27l6.553 6.05 3.044-2.81L3.333.215C3 .079 2.613 0 2.213 0c-.466 0-.89.155-1.26.46-.309.307-.418.664-.418 1.089 0 .332.084.65.248.951.163.302.397.55.69.747l.222.156z" />
                <path
                    d="M1.743 1.27 8 6.852l3.534-3.277L8.967.496C8.615.176 8.19 0 7.743 0c-.316 0-.628.092-.906.275-.277.183-.492.45-.629.775l-4.465.27z" />
            </svg>
            Google Play
        </a>
        {% endif %}
        {% if githubUrl %}
        <a href="{{ githubUrl }}" target="_blank" rel="noopener" class="btn btn-outline-primary me-3 mb-3">
            <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16"
                class="bi bi-github me-2">
                <path
                    d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z">
                </path>
            </svg>
            View Code
        </a>
        {% endif %}
    </div>

    <h3 class="fs-5 fw-bold">Design Process</h3>
    <p>{{ designProcess }}</p>

    <h3 class="fs-5 fw-bold">User Feedback</h3>
    {% if userFeedback and userFeedback.length > 0 %}
    <div class="row gy-3 mb-4">
        {% for feedback in userFeedback %}
        <div class="col-md-6">
            <div class="p-3 border rounded">
                <div class="d-flex align-items-center mb-2">
                    <div class="rating">
                        {% for i in range(1, 6) %}
                        {% if i <= feedback.rating %} <span class="text-primary">★</span>
                            {% else %}
                            <span class="text-muted">☆</span>
                            {% endif %}
                            {% endfor %}
                    </div>
                    <span class="ms-2 fw-bold">{{ feedback.user }}</span>
                </div>
                <p class="mb-0 fst-italic">{{ feedback.comment }}</p>
            </div>
        </div>
        {% endfor %}
    </div>
    {% else %}
    <p>No user feedback available yet.</p>
    {% endif %}
</div>

<div class="project-navigation mt-5">
    <div class="d-flex justify-content-between">
        {% if prevProject %}
        <a href="{{ '/' | url }}projects/{{ prevProject }}" class="btn btn-outline-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16"
                class="bi bi-arrow-left me-2">
                <path fill-rule="evenodd"
                    d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z">
                </path>
            </svg>Previous Project
        </a>
        {% else %}
        <span></span> <!-- Placeholder for layout balance -->
        {% endif %}

        {% if nextProject %}
        <a href="{{ '/' | url }}projects/{{ nextProject }}" class="btn btn-primary-dragient">Next Project
            <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16"
                class="bi bi-arrow-right ms-2">
                <path fill-rule="evenodd"
                    d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z">
                </path>
            </svg>
        </a>
        {% else %}
        <span></span> <!-- Placeholder for layout balance -->
        {% endif %}
    </div>
</div>
{% endblock %}